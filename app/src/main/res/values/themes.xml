<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculatorApp" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">#fa980b</item>
    </style>

    <style name="Theme.CalculatorApp" parent="Base.Theme.CalculatorApp" />


    <style name="calculateBtn" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width"> 72dp </item>
        <item name="android:layout_height"> 72dp </item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize"> 32dp </item>
        <item name="android:layout_margin"> 10dp </item>
        <item name="fontFamily">@font/avo</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="operatorBtn" parent="calculateBtn">
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">#fa980b</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="numbersBtn" parent="calculateBtn">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#fff</item>
    </style>

    <style name="textViewScreen">
        <item name="fontFamily">@font/avo</item>
        <item name="maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
</resources>